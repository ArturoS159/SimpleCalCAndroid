<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="231dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100">

            <Button
                android:id="@+id/buttonAC"
                style="@style/buttonStyle"
                android:onClick="buttonACClick"
                android:text="AC" />

            <Button
                android:id="@+id/buttonPM"
                style="@style/buttonStyle"
                android:onClick="buttonPMClick"
                android:text="+/-" />

            <Button
                android:id="@+id/buttonPercentage"
                style="@style/buttonStyle"
                android:onClick="buttonPercentageClick"
                android:text="%" />

            <Button
                android:id="@+id/buttonDiv"
                style="@style/buttonStyle"
                android:background="@color/greyd"
                android:onClick="buttonDivClick"
                android:text="/" />

            <Button
                android:id="@+id/buttonLog"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:onClick="buttonLogClick"
                android:text="log10" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100">

            <Button
                android:id="@+id/button7"
                style="@style/buttonStyle"
                android:onClick="button7Click"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                style="@style/buttonStyle"
                android:onClick="button8Click"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                style="@style/buttonStyle"
                android:onClick="button9Click"
                android:text="9" />

            <Button
                android:id="@+id/buttonMutiply"
                style="@style/buttonStyle"
                android:background="@color/greyd"
                android:onClick="buttonMutiplyClick"
                android:text="x" />

            <Button
                android:id="@+id/buttonSilnia"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:onClick="buttonSilniaClick"
                android:text="x!" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100">

            <Button
                android:id="@+id/button4"
                style="@style/buttonStyle"
                android:onClick="button4Click"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                style="@style/buttonStyle"
                android:onClick="button5Click"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                style="@style/buttonStyle"
                android:onClick="button6Click"
                android:text="6" />

            <Button
                android:id="@+id/buttonAdd"
                style="@style/buttonStyle"
                android:background="@color/greyd"
                android:onClick="buttonAddClick"
                android:text="+" />

            <Button
                android:id="@+id/buttonSqrt"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:onClick="buttonSqrtClick"
                android:text="SQRT(X)" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100">

            <Button
                android:id="@+id/button1"
                style="@style/buttonStyle"
                android:onClick="button1Click"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                style="@style/buttonStyle"
                android:onClick="button2Click"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                style="@style/buttonStyle"
                android:onClick="button3Click"
                android:text="3" />

            <Button
                android:id="@+id/buttonMinus"
                style="@style/buttonStyle"
                android:background="@color/greyd"
                android:onClick="buttonMinusClick"
                android:text="-" />

            <Button
                android:id="@+id/buttonx3"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:onClick="buttonx3click"
                android:text="x^3" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100">

            <Button
                android:id="@+id/button0"
                style="@style/buttonStyle"
                android:onClick="button0Click"
                android:text="0" />

            <Button
                style="@style/buttonStyle"
                android:text="" />

            <Button
                android:id="@+id/buttonDot"
                style="@style/buttonStyle"
                android:onClick="buttonDotClick"
                android:text="," />

            <Button
                android:id="@+id/buttonEqual"
                style="@style/buttonStyle"
                android:background="@color/greyd"
                android:onClick="buttonEqualClick"
                android:text="=" />

            <Button
                android:id="@+id/buttonx2"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:onClick="buttonx2Click"
                android:text="x^2" />

        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/container"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewExpression"
        android:layout_width="664dp"
        android:layout_height="121dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:background="@color/container"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/textButton"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>